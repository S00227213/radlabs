@model IEnumerable<ClubModels.Club>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClubName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.adminID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClubName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.adminID)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ClubId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ClubId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ClubId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
