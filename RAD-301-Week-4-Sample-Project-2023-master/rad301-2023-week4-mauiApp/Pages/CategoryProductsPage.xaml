<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="rad301_2023_week3_mauiApp.Pages.CategoryProductsPage"
             xmlns:data="rad301_2023_week3_mauiApp.ViewModels"
             Title="Product Page">

    <VerticalStackLayout>
        <Label Text="Products Details" VerticalOptions="Center" HorizontalOptions="Center" />

        <!-- Assuming a Product has a 'Name' property -->
        <Label Text="{Binding CurrentProduct.Name}" />

        <StackLayout>
            <Label Text="{Binding CurrentProduct.Description}"/>
            <Button Text="Save Changes" Command="{Binding SaveChangesCommand}"/>
        </StackLayout>

    </VerticalStackLayout>
</ContentPage>
